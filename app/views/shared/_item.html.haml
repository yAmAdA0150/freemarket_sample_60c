.item
  =link_to item_path(item), class:"item-link" do
    .item__box
      .item__box__image
        %span.item__box__image__price
          =item.price
        =image_tag item.image.url, alt:"item.text", class:"item__box__image__photo"
      .item__box__text
        %span.item__box__text__title
          =item.text